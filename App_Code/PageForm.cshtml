@helper Form(string user_input, int result, bool post) {
    string _response_string = user_input;
    if(IsPost)
    {
        _response_string = string.Format("{0} = {1}", user_input, Convert.ToString(result));
    }
    
    <form id = "expression_input" method = "post" action = "">
        <input = "text"
            autofocus = "autofocus"
            size = "75"
            id = "expression"
            name = "expression"
            autocomplete = "off"
            value = "33 + 45" 
            />
        <br />
        <div id = "variable_area">
            @_response_string
        </div>
        
        <br />
        <input type = "submit"
            id = "submit_button"
            value ="Submit your expression!"
        />        
    </form>  

}
